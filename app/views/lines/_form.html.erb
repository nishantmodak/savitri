<%= form_for(@line) do |f| %>
  <% if @line.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@line.errors.count, "error") %> prohibited this line from being saved:</h2>

      <ul>
      <% @line.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :no %><br />
    <%= f.number_field :no  %>
  </div>
  <div class="field">
    <%= f.label :line %><br />
    <%= f.text_area :line, :cols => 30, :rows => 10 %>
  </div>
  
  <div class="field" id="stanza">
    <%= f.label :stanza_id %><br/>
    <%= f.collection_select(:stanza_id, Stanza.order(:stanzno), :stanzno, :stanzno) %>
    <%= f.label "Canto"  %>  
    <%= text_field 'Canto', 'cantono', :size => 5 ,'readonly' => 'true' ,:id => "cantono"%>
    <%= text_field 'Canto', 'name', :size => 20, 'readonly' => 'true' ,:id => "cantoname"%>
  </div>

   <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
