<%- model_class = Post -%>
<!-- Main Page Content -->
<div class="row">
  <div class="span1">&nbsp;</div>
  <div class="span9">
    <h2 class="blog-title">
      <% @blog = Blog.find_by_slug(params[:blog_id]) %>
      <%= link_to @blog.title, blog_posts_path %>
      <small><%=  @blog.subtitle %></small>
    </h2><hr/>
  </div>
</div>
<!-- Main Blog Content -->
<div class="row">
  <div class="span1">
    &nbsp;
  </div>
  <div class="span9 sav-content">
    <% @posts.each do |post| %>
    <article>
      <h2><%= link_to post.title,  blog_post_path(post.blog,post) %>
       <% if can? :update, post %>
       <%= link_to 'Edit Post', edit_blog_post_path(post.blog,post), :class => 'btn btn-mini' %>
       <% end %>
       <% if can? :destroy, post %>
       <%= link_to 'Delete Post', blog_post_path(post.blog,post),
       :method => :delete,
       :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
       :class => 'btn btn-mini btn-danger' %>
       <% end %>
     </h2>
     <h6><i><%= link_to post.blog.user.username, post.blog.user %></i></h6>
     <div class="row">
      <div class="span9">
        <%= post.content.html_safe.gsub(/\r\n?/,"").html_safe %>
      </div>
    </div>
  </article>
  <comments> <%= link_to (pluralize post.comments.count , "Comment") , blog_post_path(post.blog,post) %>
  </comments>
  <hr/>
  <% end %>
</div>
<!-- Main Blog Content End -->
<!--  SideBar Begin -->
<div class="span2">
  <% if can? :update, @blog %>
  <h3>Manage Blog</h3>
  <%= link_to 'New Post', new_blog_post_path,
  :class => 'btn' %>
  <% end %>
  <h3> Tag Cloud </h3>
  <div id="tag_cloud">
   <ul>
    <% tag_cloud @posts.tag_counts, %w[s m l] do |tag, css_class| %>
    <li><%= link_to tag.name, tag_path(params[:blog_id],tag.name), class: css_class %></li>
    <% end %>
  </ul>
</div>
</div>
<!-- End Sidebar Content -->