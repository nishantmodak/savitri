<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="well" style="margin: auto; float:none; width: 220px;">
    <h2>Sign in</h2>

    <div class="control-group">
      <%= f.label :username, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :username, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="control-group">
        <div class="controls">
          <%= f.check_box :remember_me, :class => 'pull-left' %>
          <%= f.label :remember_me, :style => 'padding-left: 20px' %>
        </div>
      </div>
    <% end -%>

    <div class="control-grp" style="text-align: center">
      <div class="controls">
        <%= f.submit "Sign in", :class => 'btn btn-success', :style => 'margin-bottom: 20px' %>
      </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
