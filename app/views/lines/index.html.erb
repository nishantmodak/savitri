
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
   <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<h1>Listing lines</h1>

<table>
  <tr>
    <th>Line</th>
    <th>No</th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.line %></td>
    <td><%= line.no %></td>
  </tr>
<% end %>
</table>
<br />