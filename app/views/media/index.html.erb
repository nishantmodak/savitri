<div class="row">
  <div class="span12">
    <div class="page-header title">
      <h1>Manage media</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="span8 offset2 center-col">
    <div class="sp8-content">
      <section>
        <% @media.each do |medium| %>
        <div>
          <h3>
            <%= link_to medium.title, medium_audios_path(medium) %>
            <br>
            <small><%= link_to (pluralize medium.audios.count, "items"), medium_audios_path(medium) %></small>
          </h3>
          <%= link_to 'Edit details', edit_medium_path(medium), :class => "btn btn-mini btn-warning" %>
          <%= link_to 'New item', new_medium_audio_path(medium), :class => "btn btn-mini btn-info" %>
          <%= link_to 'Delete', medium_path(medium),  :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
        </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
