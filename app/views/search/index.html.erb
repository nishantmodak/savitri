<div class="row">
	<div class="span3">
		&nbsp;
	</div>
	<div class="span5">
		<%= render 'search' %>

	</div>
	<div class="span3">
		&nbsp;
	</div>
</div>
<div class="row">
	<div class="span3">
		&nbsp;
	</div>
	<div class="span5">
		<% unless @search.nil? %>
		<p><b>Total results <%= @search.total %></b></p>
		<% end %>
		<div class="results" style="font-size: 18px">
			<% @search.results.each do |l| %>
			<% logger.debug { l.inspect }%>
			<p>

				<% if l.is_a?(Line) %>
								||<%= Stanza.find(l.stanza_id).canto.cantono %>.<%= l.no %>||
				&nbsp;
					<%= l.line %>
				<% else %>
					<% if l.is_a?(Book) %>
					(Book <%= l.no %>) <%= l.name %>

					<% end %>
				<% end %>
</p>
				<% end %>

				<%= paginate @search.results, :param_name => :page %>
			</div>
		</div>
		<div class="span3">
			<%= render 'facet' %>
		</div>
	</div>
