<div class="comment">
  <div class="comment-author">
    <span class="author">
      <%= link_to comment.cached_user.cached_name, profile_path(comment.cached_user), {:class => "underline"} %>
      on <%= comment.created_at.strftime("%b %d %Y at ") %> <%= link_to comment.created_at.strftime("%l:%M %p"), blog_post_path(comment.cached_post.cached_blog, comment.cached_post, :anchor => "comment-" + comment.id.to_s), {:class => "underline"} %>:
    </span>
    <span style="float:right">
      <% if can? :destroy, comment %>
        <%= link_to 'Delete', [comment.cached_post, comment],
        :class => "btn btn-mini btn-danger",
        :confirm => 'Are you sure?',
        :method => :delete %>
      <% end %>
    </span>
  </div>
  <div id="comment-<%= comment.id %>">
    <p><%= auto_link(comment.cached_body.gsub(/\r\n?/,"<br>").html_safe, :html => { :target => '_blank', :class => "underline" }) %>
  </p>
  </div>
</div>
