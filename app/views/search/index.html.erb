<div class="row">
	<div class="span3">
		&nbsp;
	</div>
	<div class="span5">
		<%= render 'search' %>
	</div>
	<div class="span3">
		&nbsp;
	</div>
</div>
<div class="row">
	<div class="span3">
		&nbsp;
	</div>
	<div class="span5">
		<% unless params[:q].nil? %>
			<% unless @search.nil? %>
			<p class="announce">Total results: <%= @search.total %></p>
			<% end %>
			<div class="results" style="font-size: 18px">
				<% @search.each_hit_with_result do |hit,l| %>
				<% logger.debug { l.inspect }%>
				<p>
					<% if l.is_a?(Line) %>
						<%= l.line %>
						&nbsp;
						<span class="ref">||<%= Stanza.find(l.stanza_id).section_id %>.<%= l.no %>||</span>
					<% else %>
						<% if l.is_a?(Book) %>
						(Book <%= l.no %>) <%= l.name %>
						<% else %>
							<% if l.is_a?(Stanza) %>
							<p>
								<% l.lines.each_with_index do |line, index| %>
									<p>
										<%= line.line %>
										&nbsp;
										<span class="ref">||<%= l.section %>.<%= line.no %>||</span>
									</p>
								<% end %>
							</p>
							<% end %>
						<% end %>
					<% end %>
				</p>
				<% end %>
				<%= paginate @search.results, :param_name => :page %>
				</div>
		<% end %>	
		</div>
		<div class="span3">
			<% unless params[:q].nil? %>
			<%= render 'facet' %>
			<% end %>
		</div>
	</div>
