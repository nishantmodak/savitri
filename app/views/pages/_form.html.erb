<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :priority %> 
    <%= f.text_field :priority, :size => 5  %>
  </div>
  <div class="field">
    <%= f.label :category %> 
    <%= f.select(:category,[["Menu","Menu"],["Non-Menu","Non-Menu"]]) %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <div class='wmd-panel'>
      <div class="controls">
      <div id='wmd-button-bar'></div>
        <%= f.text_area :md_content, :class=> "wmd-input", :id=>"wmd-input" %>
        <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
        <%= f.text_area :content, :style=> "display: none" %>        
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit nil, :id=>"new-page" %>
  </div>
<% end %>
