<%- model_class = Blog -%>
<div class="row">
  <div class="span6 offset3">
    <div class="page-header title">
      <h1>Add New Author</h1>
    </div>
    <section>
      <h2>List of post authors</h2>
      <% @users.each do |user| %>
      <li><em>
      <%= link_to (user.name || user.username), user, { :class => 'underline' } %>
      </em>
      </li>
      <% end %>
      <hr>
      <%= form_for @blog, url: { action: 'send_write_posts_email' } , :method => 'post' do |f| %>
      Email: <%= f.text_field :post_access, { value:nil, required: 'required', type: 'email', 
                        title: "Enter email address of the existing user for giving permissions to #{@blog.title} ." } %><br />
      <%= f.submit 'Invite', { :class => "btn btn-info" } %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      blogs_path, :class => 'btn' %>
      <% end %>
    </section>
  </div>
</div>