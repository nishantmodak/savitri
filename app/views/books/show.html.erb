<div class="row">
  <div class="span8 offset2 center-col">
    <div class="sp8-content">
      <p id="notice"><%= notice %></p>

      <p>
        <b>No:</b>
        <%= @book.no %>
      </p>

      <p>
        <b>Title:</b>
        <%= @book.name %>
      </p>

      <% if can? :update, @book %>
      <%= link_to 'Edit', edit_book_path(@book) %> |
      <% end %>
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>
