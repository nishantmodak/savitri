<%= form_tag '', :html => { :class => 'form-inline' } do %>
<div class="span10">
<!--   <p><a href="#myModal" role="button" class="btn" data-toggle="modal">Import Text from Savitri</a></p>
-->  <!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <!--Modal Header -->
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Import Text from Savitri</h3>
  </div>
  <!--Modal Body -->
  <div class="modal-body">
    <div class="row" style="margin-left: 10px">
      <div id="from-line" style="float: left; margin-right: 20px;">
        <%= label :quote_from, "From" %>
        <div>
          <%= text_field_tag :quote_from, '', :class => 'text_field span1' %>
        </div>
      </div>
      <div id="to-line" style="float: left; margin-left: 20px;">
        <%= label :quote_to, "To" %>
        <div>
          <%= text_field_tag :quote_to, '', :class => 'text_field span1' %>
        </div>
      </div>
      <%= button_to("View", {:controller => "stanzas", :action => "range", :id => 6}, :id=>"view-poemtext",:style=>"margin-top: 25px;height: 30px; margin-right: 10px", :remote => true, :class => "btn pull-right") %>
    </div>
    <div style="margin-top: 20px; margin-left: 10px" id="modal-help">Enter from and to values as section.sentence. E.g. 71.39.</div>
    <hr/>
    <div id="poem-html"></div>
    <div id="poem-text" style="display: none">
    </div>
  </div>
  <!--Modal Footer -->
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn" id="insert_into_post">Insert into Post</button>
  </div>
</div>
</div>
<% end %>
