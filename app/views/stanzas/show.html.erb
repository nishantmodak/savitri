<p id="notice"><%= notice %></p>

<p>
  <b>Stanzno:</b>
  <%= @stanza.stanzno %>
</p>

<p>
	<b>Lines in this Stanza</b>
	<br/>
	<% @stanza.lines.each do |stan| %>
		<%= stan.line %><br/>
	<% end %>
</p>

<% if can? :update, @stanza %>
<%= link_to 'Edit', edit_stanza_path(@stanza) %> |
<% end %>
<%= link_to 'Back', stanzas_path %>
