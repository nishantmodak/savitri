<%- model_class = User -%>
<div class="page-header">
  <h3><%= image_tag  "rails.png" %>
  <%=t '.title', :default => @user.name %></h3>
  <div class="pull-right">Subscribe Button (TBD)</div>
</div>
<div class="content">
  <div class="row">
       <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
        <br/>
        <div class="divider">a</div>
    <div class="span6">    
        <dt>Recent Posts:</dt>
        <dd>
          <ol>
            <% @user.posts.each do |post| %>
               <%= link_to post.title , post_path(post.id) %> | 
               <%= link_to (pluralize post.comments.count , "comment") , post_path(post.id) %>
               <br/> 
            <% end %>
        </dd>
   </div>
   <div class="span6">
      <dt>Recent Comments:</dt>
      <dd>
        <ol>
          <% @user.comments.each do |comment| %>
             <%= link_to comment.body , post_path(comment.post_id) %> 
             on <i><%= link_to Post.find(comment.post_id).title, post_path(Post.find(comment.post_id)) %> </i>
             <br/> 
          <% end %>
      </dd>
  </div>
</div>
 </dl>
</div>
</div>