<div class="row">
  <div class="span6 offset3">
    <div class="page-header">
      <h1>Listing pages</h1>
  </div>
</div>
</div>
<div class="row">
  <div class="span6 offset3">
    <table class="table table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th>Link</th>
            <th>Category</th>
            <th>Priority</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <% @pages.each do |page| %>
        <tr>
            <td><%= page.name %></td>
            <td><%= link_to "/" + page.permalink, page.permalink %></td>
            <td><%= page.category %></td>
            <td><%= page.priority %></td>
            <td><%= link_to 'Edit', edit_page_path(page), :class => "btn btn-mini btn-warning" %></td>
            <td style="text-align: left"><%= link_to 'Delete', page.permalink, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div style="text-align: center">
    <%= link_to 'New Page', new_page_path, :class => "btn btn-info" %>
</div>
</div>
</div>
