
<%= paginate @stanzas, :param_name => :stanzas %>

<% content_for :head do %>
<link href='http://fonts.googleapis.com/css?family=Play' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Courgette' rel='stylesheet' type='text/css'>
<% end %>

<div class="container-fluid"> 
       <div class="row-fluid">
        <div class="span4">
           lorem ipsum
        </div>
        <div class="span6">
			<div id="cantos">
				<h2><%= Canto.find(@stanzas.first.canto_id).title %>
				</h2> 
				<% @stanzas.each do |stan| %>
				<p class="readsavitri">
			  			<% stan.lines.each do |lin| %> 
			  				<%= lin.line %><br/>
			  		<% end %>
			  		<br/>
				</p>
				<% end %>


			</div>
		</div>
	</div>
</div>