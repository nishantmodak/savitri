<%= form_for([@post, @post.comments.build], :html => { :class => 'form-horizontal' } ) do |f| %>
  <div class="control-group">
    <%= f.label :commenter , :class => 'control-label'%>
    <div class="controls" >
      <%= f.text_field :commenter , :class => 'text_field', :value => current_user.name, :readonly => 'true' %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body , :class => 'control-label'%>
    <div class="controls" >
      <%= f.text_area :body ,:rows => 4 , :class => 'text_field' %>
    </div>
  </div>
   <div class="form-actions">
    <%= f.submit 'Post Comment'%>
    
  </div>
  
<% end %>

