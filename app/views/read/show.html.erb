<div id="paginator" class="apiparam">
  <%= paginate @stanzas, :param_name => :pages , :remote => true, :window => 1 %>
</div>
<!-- dynamic fetch of books and cantos -->
<div class="container-fluid"> 
       <div class="row-fluid">
        <div class="span3">
          <div class="accordion" id="accordion2">
            <% Book.all.each do |book| %>
            <div class="accordion-group">
                  <div class="accordion-heading">
                    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= book.id %>" id="bk1">
                    <%= book.name %>
                    </a>
                  </div>
                  <div id="collapse<%= book.id %>" class="accordion-body collapse" style="height: 0px; ">
                    <div class="accordion-inner">
                       <ul class="nav nav-tabs nav-stacked">
                        <% book.cantos.each do |canto| %>
                          <li id="leftnav">
                            <%= link_to canto.title, '/read/'+book.id.to_s+"/"+canto.id.to_s+"/1" %> 
                          </li>
                        <% end %>
                       </ul>
                    </div>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
        <div class="span6 offset1">
          <div id="cantos">
            <% unless @stanzas.blank? %>
              <% @canto = Canto.find(Section.find(@stanzas.first.section).canto_id) %>
              <h2><%= @canto.title %></h1> 
              <div id="content">
              <div id="poem" class="readsavitri">
                <p><%= render @stanzas %></p>
              </div>
            </div>
            <% else %>
              <h2><%= @canto.title %></h2>
            <% end %>
          </div>
        </div>
    </div>
</div>