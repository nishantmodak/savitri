<%- model_class = Post -%>
<!-- Main Page Content and Sidebar -->
<div class="row">
  <div class="span10 offset1">
    <h2 class="blog-title">
      <% @blog = Blog.find_by_title(params[:blog_id]) %>
      <% unless @blog.nil? %>
      <%= link_to @blog.title, blog_posts_path %>
      <small><%=  @blog.subtitle %></small>
      <% else %>
      <% end %>
    </h2>    <hr/>
  </div>
</div>
<!-- Main Blog Content -->
<div class="row">
  <div class="span7 offset1 sav-content">
    <% @posts.each do |post| %>
    <article>
      <h3><a href="#"><%= link_to post.title,  blog_post_path(post.blog,post) %></a>
       <% if can? :update, post %>
       <%= link_to 'Edit Post', edit_post_path(post), :class => 'btn btn-mini' %>
       <% end %>
       <% if can? :destroy, post %>
       <%= link_to 'Delete Post', blog_post_path(post.blog,post),
       :method => :delete,
       :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
       :class => 'btn btn-mini btn-danger' %>
       <% end %>

     </h3>
     <h6><i><%= link_to post.blog.user.username, post.blog.user %></i></h6>
      <%= post.content.html_safe.gsub(/\r\n?/,"<br/>").html_safe %>
  </article>
  
  <comments> <%= link_to (pluralize post.comments.count , "Comment") , blog_post_path(post.blog,post) %>
  </comments>
  <hr/>
  <% end %>
</div>
<div class="span3">
  <% if can? :update, @blog %>
  <h3>Manage Blog</h3>
  <%= link_to 'New Post', new_post_path,
  :class => 'btn' %>
  <% end %>
  <h3> Tag Cloud </h3>
  <div id="tag_cloud">
   <ul>
    <% tag_cloud @posts.tag_counts, %w[s m l] do |tag, css_class| %>
    <li><%= link_to tag.name, tag_path(params[:blog_id],tag.name), class: css_class %></li>
    <% end %>
  </ul>
</div>
<div class="panel">
  <h5>Featured</h5>
  <p>What it takes to truly Know: For nothing is known while aught remains concealed; The Truth is known only when all is seen. ~Savitri</p>
  <a href="https://twitter.com/SavitriForever/">SavitriForever</a> 
</div>
</div>
<!-- End Main Content -->
