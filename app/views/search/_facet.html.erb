<h4>Browse by</h4>
<p><% unless params[:q].blank? %>
	
	Query: <i><%= params[:q] %></i> (<%= link_to "x", :q => nil %>)
	
	<% end %>
</p>

<div class="facets">
	<% unless @search.facet(:category).nil? %>
		<%= render 'category_facet' %>
	<% end %>
	<% unless @search.facet(:book).nil? %>
		<%= render 'book_facet' %>
	<% end %>
	<% unless @search.facet(:sbook).nil? %>
		<%= render 'sbook_facet' %>
	<% end %>
	<% unless @search.facet(:lbook).nil? %>
		<%= render 'lbook_facet' %>
	<% end %>
	<% unless @search.facet(:canto).nil? %>
		<%= render 'canto_facet' %>
	<% end %>
	<% unless @search.facet(:section).nil? %>
		<%= render 'section_facet' %>
	<% end %>
	<% unless @search.facet(:length).nil? %>
		<%= render 'length_facet' %>
	<% end %>
</div>