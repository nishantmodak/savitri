<p id="notice"><%= notice %></p>
<div class="row">
  <div class="span6 offset3">
    <div class="page-header title">
      <h1>
        <%= @task.task %>
      </h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6 offset3">

<p>
  <b>Description:</b>
  <%= @task.desc %>
</p>

<p>
  <b>Proposed date:</b>
  <%= @task.pdate %>
</p>


<p>
  <b>Start date:</b>
  <%= @task.sdate %>
</p>

<p>
  <b>End date:</b>
  <%= @task.edate %>
</p>

<p>
  <b>Task Assigned To:</b>
  <%= @task.person %>
</p>
</div>
</div>
<br/>
<div class="row">
  <div class="span6 offset3">
<%= link_to 'Edit', edit_task_path(@task) , :class => 'btn btn-warning'%>
<%= link_to 'Back', tasks_path, :class => 'btn' %>
</div>
</div>