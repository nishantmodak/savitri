<h4>Section</h4>
	<ul class="facet">
	<% for row in @search.facet(:section).rows.each do%>
		<li>
			<% if params[:section].blank? %>
			<%= link_to row.value, search_path(:q => params[:q], :section => row.value, :canto => params[:canto], :lbook => params[:lbook], :sbook => params[:sbook],:length=>params[:length]) %>
			<% else %>
			<strong><%= row.value %></strong> (<%= link_to "remove", :section => nil, :canto => params[:canto] , :lbook => params[:lbook], :q => params[:q],:sbook => params[:sbook],:length=>params[:length]  %>)
			<% end %>
		</li>
		<% end %>
	</ul>