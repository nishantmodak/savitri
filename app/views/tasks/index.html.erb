<div class="row">
  <div class="span12">
    <div class="page-header title">
      <h1>Listing tasks</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="span10 offset1 center-col">
    <div class="sp12-content" align="center">
      <table>
        <tr>
          <th>Task</th>
          <th>Proposed By</th>
          <th>Description</th>
          <th>Date Proposed</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Assigned To</th>
          <th colspan="3"></th>
        </tr>

        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.task %></td>
            <td><%= task.proposedby %></td>
            <td><%= task.desc %></td>
            <td class="nowrap"><%= task.pdate %></td>
            <td class="nowrap"><%= task.sdate %></td>
            <td class="nowrap"><%= task.edate %></td>
            <td><%= task.person %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>

      <br />
      <%= link_to 'New Task', new_task_path %>
    </div>
  </div>
</div>
