<%- model_class = Blog -%>
<div class="row">
  <div class="span6 offset3">
    <div class="page-header">
      <h1>Manage Blogs</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span6 offset3">
    <section>
      <h2>Blogs</h2>
      <% @blogs.each do |blog| %>
      <div class="well well-small">
        <h3>
          <%= link_to blog.title, blog_posts_path(blog) %>
          <br>
          <small><%= link_to (pluralize blog.posts.count, "post"), blog_posts_path(blog) %></small>
        </h3>
        <%= link_to 'Edit details', edit_blog_path(blog), :class => "btn btn-mini btn-warning" %>
        <%= link_to 'New post', new_blog_post_path(blog), :class => "btn btn-mini btn-info" %>
    	  <!--| <%= 'Moderate comments'  %> |
        | <%= 'Change template'  %> |-->
         <%= link_to 'Delete', blog_path(blog),  :method => :delete,
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-mini btn-danger' %>
      </div>
      <% end %>
    </section>
    	<% if current_user.role == 'Admin'%>
        <% if current_user.blogs.count < 3 %>
          <section>
            <h3><small>You can host up to 3 blogs.</small></h3>
            <%= link_to 'New blog', new_blog_path, :class => "btn btn-info" %>
          </section>
          <hr>
        <% end %>
        <section>
          <h2>Pages</h2>
          <h3><small>Create static files.</small></h3>
          <%= link_to 'Manage pages', pages_path, :class => "btn btn-info" %>
        </section>
        <hr>
        <section>
          <h2>Media</h2>
          <h3><small>Create podcasts.</small></h3>
          <%= link_to 'Manage media', media_path, :class => "btn btn-info" %>
        </section>
        <hr>
        <section>
          <h2>Invitations</h2>
          <h3><small>Invite new users or migrate existing ones.</small></h3>
          <%= link_to 'Send invitation', new_user_invitation_path, :class => "btn btn-info" %>
        </section>        
      <% elsif current_user.blogs.count < 1 %>
        <h3><small>You can host 1 blog.</small></h3>
        <%= link_to 'New blog', new_blog_path, :class => "btn btn-info"  %>
      <% end %>
    </section>
  </div>
</div>
