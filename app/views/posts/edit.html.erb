<%- model_class = Post -%>

<div class="row">
  <div class="span6 offset3">
    <div class="page-header title">
      <h1>
        <%= link_to @post.cached_blog.cached_title, blog_posts_path %><br/>
        <small class="blog-subtitle">
          <%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                          :default => "Edit #{model_class.model_name.human}") %>
        </small>
      </h1>
    </div>
  </div>
</div>

<%= render :partial => 'form', :locals => {:urler => blog_post_path, :act => "edit" } %>

<%= render 'shared/poemtext' %>
<%= render 'shared/image_upload' %>
<%= render 'shared/wmd_editor' %>
<%= render 'shared/music_upload' %>
